@model IEnumerable<Employee>

@{
       ViewBag.Title = "Employee View";
 }

 <div class="card-deck">
     @foreach(var emp in Model) {
        var photoPath = "~/images/" + (emp.PhotoPath ?? "space1.jpg");

         <div class="card m-3" style="min-width:18rem; max-width:30.5%">
             <div class="card-header">
                 <h3>@emp.name</h3>
             </div>
            <img class="card-img-top imageThumbnail2" style="width:100px; height:200px;" src="@photoPath" asp-append-version="true" />

             <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@emp.id"
                class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@emp.id"
                class="btn btn-primary m-1">Edit</a>

                <a href="#" class="btn btn-danger m-1">Delete</a>

             </div>
         </div>
     }

 </div>
 

  


@section scripts {
    <script src="~/js/customscript.js"></script>
}







