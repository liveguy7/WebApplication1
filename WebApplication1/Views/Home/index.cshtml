@model IEnumerable<Employee>

@{
       ViewBag.Title = "Employee View";
 }

 <div class="card-deck">
     @foreach(var emp in Model) {
         <div class="card m-3" style="width:300px;">
             <div class="card-header">
                 <h3>@emp.name</h3>
             </div>
             <img class="card-img-top" src="~/images/space1.jpg" style="height:auto; width:auto;" />

             <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@emp.id"
                class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>

             </div>
         </div>
     }

 </div>
 

  


@section scripts {
    <script src="~/js/customscript.js"></script>
}







